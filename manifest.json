{
    "manifest_version": 2,
    "name": "AmazonSmileRedirect",
    "version": "1.1",

    "description": "Simple script to redirect Amazon pages to Amazon smile",

    "developer": {
        "name": "Jacob Haldeman",
        "url": "https://github.com/jhaldeman2035"
    },
      
    "content_scripts": [
        {
            "matches": ["*://www.amazon.com/*"],
            "js": ["amazonSmileRedirect.js"]
        }
    ]
}